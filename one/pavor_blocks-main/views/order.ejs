<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <div class="flex flex-row justify-between h-32 p-8">
    <div class="">
      <a class="text-zinc-300 hover:text-white" href="/"
        ><i class="fa-solid fa-angle-left"></i> Back</a
      >
    </div>
    <div class="flex justify-evenly">
      <a
        class="p-2 underline underline-offset-8 text-zinc-300 hover:text-white"
        href="/"
        >Home</a
      >
      <a class="p-2 text-zinc-300 hover:text-white" href="/card">Products</a>
    </div>
  </div>
  <div class="px-10">
    <h1 class="text-xl">Order Request Form.</h1>
    <hr class="opacity-10 mt-3" />
    <br />
    <h6 class="text-sm font-semibold opacity-70">
      Write the Name of product you need , Description(qty, time of delivery
      etc), and Contact Number, after recieving that form we will contact you.
    </h6>
    <hr class="opacity-10 mt-3" />
  </div>

  <br />
  <form
    class="px-10"
    action="/createpost"
    method="post"
    enctype="multipart/form-data"
  >
    <input
      class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black"
      type="text"
      name="title"
      id=""
      placeholder="Name of Product"
    />
    <textarea
      class="block w-1/3 px-3 py-2 h-60 border-2 mt-2 rounded-md text-black"
      type="text"
      name="description"
      id=""
      placeholder="Description"
    ></textarea>
    <input
      class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black"
      type="text"
      name="phone"
      id=""
      placeholder="Phone number"
    />
    <input
      class="block w-1/3 px-3 py-2 border-2 mt-2 bg-red-700 rounded-md text-black"
      type="submit"
      value="Create Post"
    />
  </form>
</div>
<% include ./partials/footer.ejs %>
